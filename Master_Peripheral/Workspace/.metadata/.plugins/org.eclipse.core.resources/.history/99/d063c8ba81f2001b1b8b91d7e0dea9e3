#include <stdint.h>

#define ADC_BASE_ADDRESS		0x40012000UL
#define ADC_CR2_OFFSET			0x04UL
#define ADC_CR2					(ADC_BASE_ADDRESS + ADC_CR2_OFFSET)

#define RCC_BASE_ADDRESS		0x40023800UL
#define RCC_APB2_OFFSET			0x44UL
#define RCC_APB2				(RCC_BASE_ADDRESS + RCC_APB2_OFFSET)

int main(void)
{
    /* Loop forever */
	uint32_t* pADC_CR2 = (uint32_t*)ADC_CR2;
	*pADC_CR2 |= (1<<24);

	uint32_t* pRCC_APB2 = (uint32_t*)RCC_APB2;
	pRCC_APB2 |= (1<<8);

	for(;;);
}
